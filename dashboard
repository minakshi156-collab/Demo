    <script>
        // DOM Elements
        const dashboard = document.getElementById('dashboard');
        const sideMenuPage = document.getElementById('sideMenuPage');
        const goToSideMenuBtn = document.getElementById('goToSideMenu');
        const backToDashboardBtn = document.getElementById('backToDashboard');
        const menuItems = document.querySelectorAll('.menu-item');

        // Navigate to side menu page
        goToSideMenuBtn.addEventListener('click', function() {
            dashboard.style.display = 'none';
            sideMenuPage.style.display = 'flex';
        });

        // Navigate back to dashboard
        backToDashboardBtn.addEventListener('click', function() {
            sideMenuPage.style.display = 'none';
            dashboard.style.display = 'flex';
        });

        // Set active menu item
        menuItems.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                menuItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
                
                // In a real app, this would load the appropriate content for the selected menu item
                const itemText = this.querySelector('span').textContent;
                document.querySelector('.content-title').textContent = itemText;
                
                // Update content based on selected menu item
                const contentCards = document.querySelectorAll('.content-card');
                if (itemText === 'Users') {
                    contentCards[0].querySelector('h3').textContent = 'User Management';
                    contentCards[0].querySelector('p').textContent = 'Manage your user accounts, roles, and permissions. View user activity and manage access controls.';
                    contentCards[1].querySelector('h3').textContent = 'Recent User Signups';
                    contentCards[1].querySelector('p').textContent = 'There have been 45 new user signups in the last 7 days. The most active time for signups is between 2-5 PM.';
                } else if (itemText === 'Analytics') {
                    contentCards[0].querySelector('h3').textContent = 'Data Analytics';
                    contentCards[0].querySelector('p').textContent = 'Deep dive into your analytics data with advanced charts and reporting tools. Export data for further analysis.';
                    contentCards[1].querySelector('h3').textContent = 'Trend Analysis';
                    contentCards[1].querySelector('p').textContent = 'User engagement is up 15% month-over-month. The most popular feature continues to be the dashboard view.';
                } else if (itemText === 'Dashboard') {
                    contentCards[0].querySelector('h3').textContent = 'Recent Activity';
                    contentCards[0].querySelector('p').textContent = 'Your dashboard provides a comprehensive overview of key metrics and performance indicators. Here you can monitor user engagement, revenue trends, and system performance in real-time.';
                    contentCards[1].querySelector('h3').textContent = 'System Status';
                    contentCards[1].querySelector('p').textContent = 'All systems are operating normally. The last system update was completed 2 days ago. Next scheduled maintenance is in 14 days.';
                }
            });
        });

        // Simulate live updating stats on dashboard
        function updateStats() {
            const statValues = document.querySelectorAll('.stat-value');
            
            // Randomly update the stats slightly to simulate live data
            statValues.forEach(stat => {
                const currentValue = stat.textContent;
                if (currentValue.includes('$')) {
                    const num = parseInt(currentValue.replace('$', '').replace(',', ''));
                    const change = Math.floor(Math.random() * 201) - 100; // -100 to +100
                    const newNum = num + change;
                    stat.textContent = '$' + newNum.toLocaleString();
                } else if (currentValue.includes('%')) {
                    const num = parseFloat(currentValue.replace('%', ''));
                    const change = (Math.random() * 0.5) - 0.25; // -0.25 to +0.25
                    const newNum = num + change;
                    stat.textContent = newNum.toFixed(2) + '%';
                } else {
                    const num = parseInt(currentValue.replace(',', ''));
                    const change = Math.floor(Math.random() * 21) - 10; // -10 to +10
                    const newNum = num + change;
                    stat.textContent = newNum.toLocaleString();
                }
            });
        }

        // Update stats every 10 seconds
        setInterval(updateStats, 10000);
    </script>
</body>
